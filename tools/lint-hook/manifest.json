{
  "type": "hook",
  "name": "auto-lint",
  "version": "1.0.0",
  "description": "Automatically lint files before they are committed",
  "config": {
    "event": "PreCommit",
    "matcher": "",
    "hooks": [
      {
        "type": "command",
        "command": "npx eslint --fix $(git diff --cached --name-only --diff-filter=d | grep -E '\\.(js|ts|jsx|tsx)$' | tr '\\n' ' ')"
      }
    ]
  }
}
